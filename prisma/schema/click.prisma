model Click {
  id String @id @default(uuid()) @unique
  linkId String
  socialMediaClicked SocialMedia?
  link Link @relation(fields: [linkId], references: [id])
  createdAt DateTime @default(now())

  // Network info
  ipAddress String?
  userAgent String?
  referrer String?
  
  // Browser info
  browser String? // Chrome, Firefox, Safari etc
  browserVersion String?
  operatingSystem String? // Windows, MacOS, iOS etc
  deviceType String? // mobile, tablet, desktop
  screenResolution String? // 1920x1080 etc
  language String? // en-US etc
  timezone String?

  // Session info
  sessionDuration Int? // Time spent on page in seconds
  exitPage String? // URL user went to after clicking
  
  // Location
  country Country?
  city String?
  region String? // State/province
  latitude Float?
  longitude Float?
}

enum SocialMedia {
  APPLE_MUSIC
  DISCORD
  FACEBOOK
  INSTAGRAM
  PATREON
  SPOTIFY
  TIKTOK
  TWITTER_X
  YOUTUBE
}