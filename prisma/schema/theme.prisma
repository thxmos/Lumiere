model Theme {
  id String @id @default(uuid()) @unique
  userId String @unique
  user User @relation("UserTheme", fields: [userId], references: [id])

  primaryColor String @db.Char(7) @default("#3f434a")

  fontFamily String // TODO: make FontFamily enum
  fontWeight Int
  fontColor String @db.Char(7)
  secondaryColorFont String @db.Char(7)

  borderColor String
  borderRadius Int
  borderWidth Int
  borderStyle String

  cardBackgroundColor String? @db.Char(7)
  iconColor String? @db.Char(7)

  backgroundType String @default("color") // "color" | "image" | "video"
  backgroundColor String? @db.Char(7) 
  gradient Boolean @default(false)
  gradientColor String? @db.Char(7)
  backgroundImageUrl String?
  videoUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

enum FontFamily {
  INTER
  ROBOTO
  POPPINS
  LATO
  ARIAL
  HELVETICA
  TIMES_NEW_ROMAN
  GEORGIA
  GEORGIA_PRO
  PALATINO
  BOOKMAN
  COMIC_SANS_MS
  IMPACT
  LUCIDA_SANS_UNICODE
  LUCIDA_SANS
  GENEVA
  LUCIDA_CONSOLE
  MONACO
  COURIER_NEW
  LUCIDA_BRIGHT
}